{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "Lua.runtime.version": "Lua 5.4",
  "Lua.diagnostics.globals": [
    "dataref",
    "XPLM",
    "draw_string",
    "graphics",
    "mouseclick",
    "mousewheel",
    "do_every_frame",
    "require"
  ],
  "Lua.workspace.library": [
    "./libs"
  ],
  "Lua.diagnostics.disable": ["lowercase-global"]
}